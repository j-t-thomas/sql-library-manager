extends layout

block content 
   h1 Update Book
   
   form(method='post' action=`/books/${book.id}`)
      
      if(error)
         ul.error 
            each error in errors 
               li= error.message
      
      p
         label(for='title') Title
         input(name='title' value=`${book.title}` type='text' id='title')
      p
         label(for='author') Author
         input(name='author' value=`${book.author}` type='text' id='author')
      p
         label(for='genre') Genre
         input(name='genre' value=`${book.genre}` type='text' id='genre')
      p
         label(for='year') Year
         input(name='year' value=`${book.year}` type='text' id='year')
      p
         input(type='submit' value='Update Book')
         
   form(method='post' action=`/books/${book.id}/delete` onsubmit='return confirm("Do you really want to delete this book?");')
     
      p
         a.button(class='button' href='/') Cancel
      p
         input(type='submit' value='Delete Book')